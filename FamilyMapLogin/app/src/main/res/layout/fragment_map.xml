<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapfragment"
    tools:context=".fragments.MapFragmentForHistory">
    <RelativeLayout
        android:id="@+id/justthemap"
        android:paddingBottom="150px"
        android:paddingTop="60px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/mapFragment2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.amazon.geo.mapsv2.SupportMapFragment" />
    </RelativeLayout>
<RelativeLayout
    android:paddingTop="10px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mybottomview"
    >
    <TextView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A test"
        android:id="@+id/textevent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="90px"
        android:layout_marginBottom="30px"

        />

    <TextView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewPerson"
        android:layout_above="@+id/textevent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="90px"
        android:layout_marginBottom="20px"
       />
   <ImageView
       android:layout_width="90dp"
       android:layout_height="90dp"
       android:src="@drawable/android"
       android:id="@+id/maleorfemale"
       android:layout_marginTop="800px"
       />

</RelativeLayout>
</RelativeLayout>